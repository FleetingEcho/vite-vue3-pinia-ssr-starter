{
  "compilerOptions": {
    "target": "es2020",
    "module": "ESNext",
    "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "jsx": "preserve",
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "lib": ["dom", "dom.iterable", "esnext", "ES6"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitThis": false,
    "resolveJsonModule": true,
    // "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "types": ["axios", "node", "vite/client"],
    "incremental": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src"]
}
